        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/selector_activity_main_text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/dp_x0</item>
        <item name="android:paddingBottom">@dimen/dp_x10</item>
        <item name="android:paddingTop">@dimen/dp_x10</item>
