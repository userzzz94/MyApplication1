<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.huafeng.com.myapplication1.activity.MainActivity_Manager"
    android:orientation="vertical" >
    <!--<android.support.v7.widget.Toolbar-->
        <!--android:id="@+id/manager_toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="?attr/actionBarSize"-->
        <!--android:background="?attr/colorPrimary"-->
        <!--android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->
        <!--app:popupTheme="@style/ThemeOverlay.AppCompat.Light">-->

    <!--</android.support.v7.widget.Toolbar>-->

    <activity.huafeng.com.myapplication1.view.NoScrollViewPager
    android:id="@+id/activity_main_manager_viewpager"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    </activity.huafeng.com.myapplication1.view.NoScrollViewPager>

    <!-- 这里可以添加一条间隔线 -->
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray_color1"/>

    <RadioGroup
        android:id="@+id/activity_main_manager_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">


        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/activity_main_manager_message"
            style="@style/activity_main_radiobutton_style"
            android:text="消息" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/activity_main_manager_findcar"
            style="@style/activity_main_radiobutton_style"
            android:text="订单"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/activity_main_manager_search"
            style="@style/activity_main_radiobutton_style"
            android:text="查询"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/activity_main_manager_mine"
            style="@style/activity_main_radiobutton_style"
            android:text="我的"/>

    </RadioGroup>

</LinearLayout>
