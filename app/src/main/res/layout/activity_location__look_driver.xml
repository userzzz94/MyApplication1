<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--标题栏-->
    <RelativeLayout
        android:id="@+id/activity_master_look_driver_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_x100"
        android:background="@color/main_button_checked">
        <ImageView
            android:id="@+id/activity_master_look_driver_back"
            android:layout_width="@dimen/dp_x60"
            android:layout_height="@dimen/dp_x45"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_x20"
            android:src="@drawable/selector_back_button_white_and_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情查询"
            android:textSize="20sp"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@id/activity_master_look_driver_title">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/activity_master_look_driver_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/remark_linearlayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_x60"
                    android:layout_marginLeft="@dimen/dp_x15"
                    android:layout_marginTop="@dimen/dp_x5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <activity.huafeng.com.myapplication1.view.AutoScrollTextView
                        android:id="@+id/activity_master_look_driver_qsd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京"
                        android:textColor="@color/black_color1"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="@dimen/dp_x40"
                        android:layout_height="@dimen/dp_x40"
                        android:src="@drawable/icon_main_to_pressed" />

                    <activity.huafeng.com.myapplication1.view.AutoScrollTextView
                        android:id="@+id/activity_master_look_driver_zdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="济南"
                        android:textColor="@color/black_color1"
                        android:textSize="18sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_remark_name"
                    android:layout_width="@dimen/dp_x400"
                    android:layout_height="@dimen/dp_x45"
                    android:layout_below="@id/remark_linearlayout1"
                    android:layout_marginTop="@dimen/dp_x5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginLeft="@dimen/dp_x15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="任务单号："
                        android:textColor="@color/black_color1"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/activity_master_look_driver_num"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="15253546257"
                        android:textColor="@color/blue_color1"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_x45"
                    android:layout_below="@id/ll_remark_name"
                    android:layout_marginTop="@dimen/dp_x5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_x15">
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货物类型:"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dp_x15"
                        android:id="@+id/activity_master_look_driver_cargotype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="货物类型"
                        android:textColor="@color/blue_color1"
                        android:textSize="16sp" />
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_x30">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="吨位:"
                        android:textSize="17sp"/>

                    <TextView
                        android:id="@+id/activity_master_look_driver_weight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="吨位"
                        android:textColor="@color/blue_color1"
                        android:textSize="16sp"
                        android:layout_marginLeft="@dimen/dp_x15"/>
                </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_x45"
                    android:layout_below="@id/linearLayout"
                    android:layout_marginEnd="@dimen/dp_x20"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_x30"
                            android:layout_height="@dimen/dp_x30"
                            android:layout_marginStart="@dimen/dp_x10"
                            android:src="@drawable/icon_time"
                            android:layout_marginEnd="@dimen/dp_x5"/>

                        <TextView
                            android:id="@+id/activity_master_look_driver_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2017-09-14 15:56"
                            android:maxLines="1"
                            android:textColor="@color/gray_color2"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>




            <!-- 地图 -->

                <com.baidu.mapapi.map.MapView
                    android:id="@+id/activity_master_look_driver_map"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_x600"
                    android:clickable="true"
                    android:layout_marginTop="@dimen/dp_x10"
                    android:layout_below="@id/activity_master_look_driver_layout1"/>

            <RelativeLayout
                android:id="@+id/activity_master_look_driver_layout4"
                android:layout_below="@id/activity_master_look_driver_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_x20"
                android:layout_marginTop="@dimen/dp_x20"
                android:layout_marginEnd="@dimen/dp_x20">
                <LinearLayout
                    android:id="@+id/activity_master_look_driver_layout4_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前位置:"
                        android:textSize="17sp"/>
                    <activity.huafeng.com.myapplication1.view.AutoScrollTextView
                        android:id="@+id/activity_master_look_driver_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="山东省济南市历下区力高国际"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textSize="15sp"
                        android:layout_marginStart="@dimen/dp_x20"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/activity_master_look_driver_layout4_layout2"
                    android:layout_below="@id/activity_master_look_driver_layout4_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_x10"
                    android:layout_marginBottom="@dimen/dp_x20">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.3"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="司        机:"
                                android:textSize="17sp"/>
                            <TextView
                                android:id="@+id/activity_master_look_driver_drivername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="高越"
                                android:textSize="15sp"
                                android:layout_marginStart="@dimen/dp_x20"
                                android:textColor="@color/blue_color1"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="车  牌  号:"
                                android:textSize="17sp"/>
                            <TextView
                                android:id="@+id/activity_master_look_driver_drivercph"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="鲁AB36AV"
                                android:textSize="15sp"
                                android:layout_marginStart="@dimen/dp_x20"
                                android:textColor="@color/blue_color1"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp_x10">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.3"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="电        话:"
                                android:textSize="17sp"/>
                            <TextView
                                android:id="@+id/activity_master_look_driver_driverphone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="13888888888"
                                android:textSize="15sp"
                                android:layout_marginStart="@dimen/dp_x20"
                                android:textColor="@color/blue_color1"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="车        型:"
                                android:textSize="17sp"/>
                            <TextView
                                android:id="@+id/activity_master_look_driver_cdname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="平板"
                                android:textSize="15sp"
                                android:layout_marginStart="@dimen/dp_x20"
                                android:textColor="@color/blue_color1"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
    <TextView
        android:id="@+id/record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</RelativeLayout>